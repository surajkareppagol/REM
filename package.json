{
  "name": "rem",
  "version": "1.0.0",
  "description": "Markdown Renderer",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "watch:css": "live-server && node-sass public/saas/main.scss public/css/style.css --watch",
    "compile:css": "node-sass public/sass/main.scss public/css/style.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.css",
    "compress:css": "node-sass public/css/style.css public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:css prefix:css compress:css",
    "build:rem-css": "postcss --use autoprefixer -b 'last 10 versions' public/css/rem.css && node-sass public/css/rem.css public/css/rem.comp.css --output-style compressed"
  },
  "author": "suraj kareppagol",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "concat": "^1.0.3",
    "live-server": "^1.1.0",
    "node-sass": "^9.0.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "formidable": "^3.5.1",
    "mongoose": "^7.5.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pug": "^3.0.2"
  }
}
